body, html
  margin-top: 0px

div.tooltip
  position: absolute
  text-align: center
  width: 120px
  height: 16px
  padding: 3px
  font: 12px sans-serif
  background: white
  color: black
  border: 0px
  border-radius: 4px
  pointer-events: none

#visualization

  svg#map
    path:hover
    	fill-opacity: .7


#voterData
  display: none

  h1
    font-family: sans-serif
    margin-bottom: 0

  h2
    font-size: 16px
    font-weight: normal
    margin-bottom: 1.3em
    span
      font-weight: bold
      font-style: italic

  dl
    dt
      font-weight: bold
    dd
      font-style: italic
      margin-bottom: 1em

  table
    width: 100%
    color: white

    tr
      td
        padding: 10px

      td.pieCell
        background: white

      td:first-child
        width: 25%
        font-weight: bold
        font-family: sans-serif
      td:nth-child(2)
        width: 25%
        text-align: right
        font-style: italic
      td:nth-child(3)
        width: 25%
        text-align: right
        font-style: italic

    tr.noVoteRow
      background: #999

    tr.clintonRow
      background: #009

    tr.trumpRow
      background: #900

    tr.othersRow
      background: #090
